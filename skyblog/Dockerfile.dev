# syntax=docker/dockerfile:1

ARG RUBY_VERSION=3.3.4
FROM ruby:${RUBY_VERSION} AS dev

# Install OS packages needed for Rails + gems
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
      build-essential \
      curl \
      libpq-dev \
      postgresql-client \
      libvips \
      libjemalloc2 \
      git && \
    rm -rf /var/lib/apt/lists/* /var/cache/apt/archives

# Set working directory
WORKDIR /app

# -----------------------------------------
# ⚠️ Copy entrypoint BEFORE app files (better caching)
# -----------------------------------------
COPY entrypoint.sh /usr/bin/entrypoint.sh
RUN chmod +x /usr/bin/entrypoint.sh

ENTRYPOINT ["entrypoint.sh"]

# Copy only Gemfile first (for caching)
COPY Gemfile Gemfile.lock ./

# Install dev + test gems
RUN bundle install

# Copy entire project
COPY . .

# Expose dev server port
EXPOSE 3000

# Run Rails server for development
CMD ["bin/rails", "server", "-b", "0.0.0.0"]
